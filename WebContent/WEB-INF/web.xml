<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<servlet>
		<servlet-name>BooksMgt-init</servlet-name>
		<servlet-class>org.lzw.booksmgt.servlet.BooksMgtInitialize</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>BooksMgtServlet</servlet-name>
		<servlet-class>org.lzw.booksmgt.servlet.BooksMgtServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>BooksMgtServlet</servlet-name>
		<url-pattern>/booksmgt</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
